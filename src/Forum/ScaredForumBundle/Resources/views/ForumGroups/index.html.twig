{% extends 'ScaredForumBundle::base.html.twig' %}

{% block body %}
<table class="records_list">

    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('forumgroups_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
        <tr>
            <td>{{ entity.description }}</td>
        {% if is_granted('ROLE_ADMIN') %}
            <td><a href="/">Delete</a></td>
        {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Новая группа</h1>
        <form action="{{ path('forumgroups_create') }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <p>
                <button type="submit">Create</button>
            </p>

        </form>
    {% endif %}
{% endblock %}
