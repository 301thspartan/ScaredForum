{% extends 'ScaredForumBundle::base.html.twig' %}

{% block body %}
<h1>{{ entity.name }}</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>


    {% for forum in forums %}
        <table class="records_list" border="1"style="margin-top: 20px; width: 100%;">
        <tbody>
        <tr>
            <td><a href="{{ path('forum_show', { 'id': forum.id }) }}">{{ forum.name }}</a></td>
        </tr>
        <tr>
            <td>{{ forum.description }}</td>
        </tr>
        </tbody>
        </table>
    {% endfor %}


    {% if is_granted('ROLE_ADMIN') %}
        <h1>Новый форум</h1>
        <form action="{{ path('forum_create') }}" method="post" {{ form_enctype(new_forum_form) }}>
            {{ form_widget(new_forum_form) }}
            <p>
                <button type="submit">Create</button>
            </p>
        </form>
    {% endif %}
{% endblock %}
