{% extends "form_div_layout.html.twig" %}

{% block form_rows %}
    {% spaceless %}
    <div class="resize_form">
        <fieldset>
            <ul class="ipsForm ipsForm_horizontal">
                {% for child in form %}
                    {{ form_row(child) }}
                {% endfor %}
            </ul>
        </fieldset>
    </div>
    {% endspaceless %}
{% endblock form_rows %}




{% block form_row %}
    <li class="ipsField">
        {{ form_label(form, label|default(null), { 'label_attr': { 'class': 'ipsField_title' } }) }}
        <p class="ipsField_content">
            {{ form_widget(form, { 'attr': {'class': 'input_text', 'size': 45} }) }}
            {{ form_errors(form)}}
        </p>
    </li>
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="message error">
            <ul class="error_list">
                {% for error in errors %}
                    <li>{{
                    error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                    }}</li>
                {% endfor %}
            </ul>
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block field_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <span class="reg_msg reg_error" id="display_name_msg">
                <img alt="" src="http://www.ipbforumskins.com/skindemo/public/style_images/concise34x/exclamation.png"> âœ—

                    {% for error in errors %}
                        {{
                        error.messagePluralization is null
                        ? error.messageTemplate|trans(error.messageParameters, 'validators')
                        : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                        }}<br />
                    {% endfor %}

              </span>
        {% endif %}
    {% endspaceless %}
{% endblock field_errors %}
